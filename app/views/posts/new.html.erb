<h1 class="text-center mb-5 signup-heading">Create Post <span class="newpost-tagline">Spill your guts out!</span></h1>

<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= form_with(model: @post, local: true) do |f| %>

      <%= render 'shared/errors', object: f.object %>
    
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control", placeholder: "Enter title"%>
        <small id="title-help" class="form-text text-muted">title must not be more than 255 chars</small>
      </div>

      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: "form-control", placeholder: "Enter body", rows: 8, style: "margin-bottom: 1.3rem;" %>
      </div>

      <%= f.submit :share, class: "btn btn-primary" %>
      
    <% end%>
  
  </div>
</div>


